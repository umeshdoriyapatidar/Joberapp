  <%=render 'status_form'%>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">JOB TITLE</th>
        <th scope="col">Status</th>
    
        <th colspan="3"></th>
      </tr>
    </thead>
    <%@jobs.each do |job|%>
      <tbody>
        <% status=application_status(current_applicant.id,job.id)%>
          <tr>
            <td scope="row"><h2><%=link_to job.job_title,job_path(id:job.id)%></h2></td>
            <td scope="row"><h3 style='color:black'><%=status%></h3></td>
          </tr>
      </tbody>
    <%end%>
    <%# <%=paginate @jobs%>
  </table>
  