<div><h3 >Jobs </h3></div>
<div class="row py-lg-5">
  <div class="col-lg-6 col-md-8 mx-auto">
  <table class="table">
    <thead>
     <tr>
        <th scope="col">Job_number</th>
        <th scope="col">Job_name</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <%i=0%>
    <%@jobs.each do |job|%>
        <%i=i+1%> 
        <tbody>
          <h1>
          <tr>
            <h1><td scope="row"><%=i %></td></h1>
            <h1><td scope="row"><%=link_to job.job_title,job_path(job.id)%></td></h1>     
          </tr>
          </h1>
        </tbody>
    <%end%>
  </table>
  <%=paginate @jobs%>
  </div>
</div>